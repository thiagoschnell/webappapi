<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZipWebsiteToWebViewExampleMainActivity">

    <LinearLayout
        android:id="@+id/ZipWebViewExampleLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zip Website to Webview\nExample"
            android:gravity="center"
            android:textSize="32dp"></TextView>
        <TextView
            android:id="@+id/ZipWebsiteToWebViewExampleLayoutTextviewHello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:textSize="16dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/ZipWebsiteToWebViewExampleLayoutButtonUnZipFromResource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unzip Website from Resource"></Button>

            <Button
                android:id="@+id/ZipWebsiteToWebViewExampleLayoutButtonDownloadPatchAndInstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patch website files\n (download and install)"></Button>

            <Button
                android:id="@+id/ZipWebsiteToWebViewExampleLayoutButtonDownloadUpdateAndInstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Install new version from update files\n (download and install)"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></WebView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>