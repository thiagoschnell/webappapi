<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    tools:context=".InternetConnectionActivity">


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/RealAppLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Internet Connection \nRealtime Network Status"
            android:gravity="center"
            android:textSize="32dp"></TextView>
        <TextView
            android:id="@+id/InternetConnectionTextviewIsAvailable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:text="IsAvailable"
            android:textSize="16dp"></TextView>
        <TextView
            android:id="@+id/InternetConnectionTextviewIsOffline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="IsOffline"
            android:textSize="16dp"></TextView>
        <TextView
            android:id="@+id/InternetConnectionTextviewIsOnline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="140dp"
            android:gravity="center"
            android:text="IsOnline"
            android:textSize="16dp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/InternetConnectionButtonCheckInternetConnectionAndRequestUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check internet connection and request url"></Button>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>